<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/edit_text_chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название чата (необязательно)"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите друзей:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_friends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@drawable/rounded_recyclerview" />

    <Button
        android:id="@+id/button_create_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />
</LinearLayout>
