<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MessengerApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:colorBackground">@color/off_white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors. -->
        <item name="colorError">@color/dark_red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.MessengerApp" parent="Base.Theme.MessengerApp" />
</resources>
